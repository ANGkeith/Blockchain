{
    "plugins": [
        "mocha",
        "babel"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "extends": [
        "eslint:recommended",
        "plugin:mocha/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "comma-dangle": ["error", {
            "arrays": "only-multiline",
            "objects": "only-multiline",
            "imports": "only-multiline",
            "exports": "only-multiline",
            "functions": "only-multiline"
        }]
    },
    "env": {
        "browser": true,
        "node": true,
        "jquery": true,
        "es6": true,
        "mocha": true
    },
    "globals": {
        "web3": "writable",
        "TruffleContract": "readonly",
        "Web3": "readonly",
        "assert": "readonly"
    }
}
